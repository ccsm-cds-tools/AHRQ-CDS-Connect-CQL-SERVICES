{
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "no-console": ["warn", { "allow": ["warn", "error"] }],
        "no-unused-vars": ["error", { "vars": "all", "args": "none" }],
        "quotes": ["warn", "single", { "allowTemplateLiterals": true }],
        "semi": ["error", "always"]
    },
    "env": {
        "es2020": true,
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2022
    },
    "extends": ["eslint:recommended"]
}